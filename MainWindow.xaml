    <Grid>
        <RichTextBox
            x:Name="logBox"
            Padding="0,4"
            Background="#1f1f1f"
            BorderThickness="0"
            FontFamily="Cascadia Mono"
            FontSize="15"
            Foreground="White"
            IsReadOnly="True" />
    </Grid>
</Window>
